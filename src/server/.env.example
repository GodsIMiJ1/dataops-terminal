# R3B3L 4F Server Configuration
# Copy this file to .env and modify as needed

# Server port for the combined server
PORT=5000

# API token for authentication (change this to a secure random string)
API_TOKEN=r3b3l-4f-secure-token

# Ollama API endpoint
OLLAMA_API=http://localhost:11434/api

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://r3b3l-4f.netlify.app,https://r3b3l-4f-dev.netlify.app,http://localhost:8081,http://localhost:3000

# Rate limiting (requests per window)
RATE_LIMIT_MAX=100
# Rate limiting window in minutes
RATE_LIMIT_WINDOW_MINUTES=15

# Request size limit
REQUEST_SIZE_LIMIT=10mb
